<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/postPictureCancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:background="@mipmap/arrow_back" />
        <Button
            android:id="@+id/postPictureCommit"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="发布"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/button_circle_shape"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/postPictureText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scrollbarStyle="insideInset"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="left|top"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:hint="小宇真牛逼！"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postPictureRecyclerView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/postPictureAdd"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_post_picture_add"
        />
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="1dp"
        android:background="#C6A3A3"/>
    <EditText
        android:id="@+id/postPictureTopic"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="top|left"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@null"
        android:hint="#话题"/>


</LinearLayout>