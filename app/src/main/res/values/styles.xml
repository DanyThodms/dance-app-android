<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_28</item>
    </style>

    <!-- 设置Toolbar菜单文字的大小  -->
    <style name="ToolbarTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:actionMenuTextColor">#000000</item> <!--颜色-->
        <item name="android:textSize">16sp</item> <!--字体大小-->
        <item name="colorControlNormal">#000000</item>
    </style>

    <!--    EditText下划线颜色-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/red0</item>
        <item name="colorControlActivated">@color/red1</item>
    </style>

    <style name="DynamicTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>